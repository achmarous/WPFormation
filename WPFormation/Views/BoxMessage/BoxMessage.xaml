             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFormation.Views.BoxMessage"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="btnFire" Content="Fire" Click="btnFire_Click" Width="90" Height="40"/>
        <TextBox Name="tbinfo" Grid.Row="1" Text="" Width="90" Height="40"/>
    </Grid>
</UserControl>
